CREATE COLUMN TABLE Users (
  id INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  username NVARCHAR(100) NOT NULL UNIQUE,
  password NVARCHAR(255) NOT NULL,
  name NVARCHAR(100),
  email NVARCHAR(255),
  phone NVARCHAR(50),
  gender NVARCHAR(10),
  roleId INTEGER,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);



CREATE COLUMN TABLE DocumentSequences (
  id INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  documentType NVARCHAR(50) NOT NULL,
  prefix NVARCHAR(10) NOT NULL,
  nextNumber INTEGER DEFAULT 1,
  paddingLength INTEGER DEFAULT 4,
  isActive INTEGER DEFAULT 1,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);


CREATE COLUMN TABLE Roles (
  id INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  name NVARCHAR(100) NOT NULL UNIQUE,
  description NVARCHAR(255)
);

CREATE COLUMN TABLE RolePermissions (
  roleId INTEGER NOT NULL,
  permission NVARCHAR(100) NOT NULL,
  PRIMARY KEY (roleId, permission),
  FOREIGN KEY (roleId) REFERENCES Roles(id)
);

CREATE COLUMN TABLE EmailRecipients (
  id INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  documentType NVARCHAR(50) NOT NULL,
  eventType NVARCHAR(50) NOT NULL,
  email NVARCHAR(255) NOT NULL
);

CREATE COLUMN TABLE EmailSetup (
  id INTEGER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
  senderEmail NVARCHAR(255),
  smtpHost NVARCHAR(255),
  smtpPort INTEGER,
  smtpUser NVARCHAR(255),
  smtpPassword NVARCHAR(255),
  ccEmails NVARCHAR(1000)
);

